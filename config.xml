<?xml version='1.0' encoding='utf-8'?>

<widget id="com.bitoad.simple" version="0.1.0-cordova" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Simple Lighting</name>
    <description>
        Simple Lighting solution
    </description>
    <author email="services@bitoad.com" href="http://bitoad.com">
        Bitoad Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-zeroconf"  />
    <access origin="*" />
    <platform name="android">
        <!-- These preferences are actually available in Cordova by default although not currently documented -->
        <preference name="android-minSdkVersion" value="14" />
        <preference name="android-maxSdkVersion" value="24" />
        <preference name="android-targetSdkVersion" value="23" />

        <!-- Or you can use a config-file element for them -->
        <config-file target="AndroidManifest.xml" parent="/*">
            <uses-sdk android:maxSdkVersion="22" android:minSdkVersion="10" android:targetSdkVersion="21" />
        </config-file>
    </platform>
    <platform name="ios">
    </platform>
</widget>
