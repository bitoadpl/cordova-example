<?xml version='1.0' encoding='utf-8'?>

<widget id="com.bitoad.simple" version="0.1.0-cordova" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Simple Lighting</name>
    <description>
        Simple Lighting solution
    </description>
    <author email="services@bitoad.com" href="http://bitoad.com">
        Bitoad Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-zeroconf"  />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
